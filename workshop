//function(){}
//document.getElementById("")
//addEventListener("", function(){})
//https://codepen.io/jacklinton/pen/kickstart
var greeting = document.getElementById("greeting")
var box = document.getElementById("box")
var button = document.getElementById("button")
var input = document.getElementById("input")

function iceCream(){
  
  if(input.value == "chocolate-chip cookie dough"){
  window.alert("Yay! We like the same flavor!")
  } 
  else {
  window.alert("Oh, I like Chocolate-chip cookie dough...")
  }
}

button.addEventListener("click", function(){
  iceCream()
  //window.alert("Oh no! You pushed the button :(")
})

greeting.innerHTML = "Clarissa!"
greeting.style.color = "Teal"

greeting.addEventListener("mouseover", function(){
  greeting.style.color = "Orange"
})

greeting.addEventListener("mouseout", function(){
  greeting.style.color = "Teal"
})

box.style.backgroundColor = "Purple"

box.addEventListener("mouseover", function(){
  box.style.backgroundColor = "Red"
})

box.addEventListener("mouseout", function(){
  box.style.backgroundColor = "Purple"
})

button.addEventListener("mouseover", function(){
  button.style.backgroundColor = "green"  
})

button.addEventListener("mouseout", function(){
  button.style.backgroundColor = "blue"  
})
